<Window x:Class="SupaPlayer.Player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupaPlayer"
        mc:Ignorable="d"
        Title="Player" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <MediaElement x:Name="MediaScreen" HorizontalAlignment="Left" Height="368" VerticalAlignment="Top" Width="797" Margin="0,0,0,0"/>
        <Button x:Name="PlayPause" Content="Play" Margin="360,15,359,10" Grid.Row="1"/>
    </Grid>
</Window>
